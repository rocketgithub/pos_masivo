<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form_pos_masivo" model="ir.ui.view">
        <field name="name">pos.config.form.view_pos_masivo</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <sheet position="inside">
                <h2>Masivo</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="picking_al_cerrar"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="picking_al_cerrar" string="Un solo movimiento de inventario al cierre"/>
                        </div>
                    </div>
                </div>
            </sheet>
        </field>
    </record>
</odoo>
